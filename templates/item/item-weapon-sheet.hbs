<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        /></h1>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='description'>{{localize "INS_MV.ItemSheet.Description"}}</a>
    <a class='item' data-tab='attributes'>{{localize "INS_MV.ItemSheet.Attributes"}}</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>

    {{! Description Tab }}
    <div class='tab' data-group='primary' data-tab='description'>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.description'
        engine='prosemirror'
        button=true
        editable=editable
      }}
    </div>

    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      {{! As you add new fields, add them in here! }}
      <div class='form-group'>
        <label>{{localize "INS_MV.Weapon.Power"}}</label>
        <input
          type='number'
          name='system.power'
          value='{{system.power}}'
          data-dtype='Number'
        />
      </div>
      <div class='form-group'>
        <label>{{localize "INS_MV.Weapon.Precision"}}</label>
        <input
          type='number'
          name='system.precision'
          value='{{system.precision}}'
          data-dtype='Number'
        />
      </div>
      <div class='form-group'>
        <label>{{localize "INS_MV.Weapon.Skill"}}</label>
        <select name='system.skill'>
          {{#select system.skill}}
            {{#each ../skills as |skill key|}}
              <option value='{{key}}'>{{localize skill}}</option>
            {{/each}}
          {{/select}}
        </select>
      </div>
      <div class='form-group'>
        <label>{{localize "INS_MV.Weapon.Speciality"}}</label>
        <input
          type='text'
          name='system.speciality'
          value='{{system.speciality}}'
        />
      </div>
    </div>
  </section>
</form>