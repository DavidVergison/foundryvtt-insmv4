<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>Nom</div>
    <div class='item-formula'>Comp√©tence</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='nouveau'
        data-type='item'
      >
        <i class='fas fa-plus'></i>
        nouveau
      </a>
    </div>
  </li>
  {{#each gear as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item' data-roll='i:{{item.system.skill}}/{{item.system.spe}}'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-formula item-prop'>{{item.system.skill}} / {{item.system.spe}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='modifier'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='supprimer'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>