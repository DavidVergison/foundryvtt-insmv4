
<div class="grid-span-4 flex-group-left {{#unless (includes attributes 'liste')}}rollable{{/unless}}" data-roll="t:{{key}}">
{{#if (includes attributes "exotique")}}
    <i class="fas fa-dice-d20"></i>
    {{editOrView 
        (lookup @root.options "edition") 
        (concat "system.exotic." key "_label") 
        (lookup @root.system.exotic (concat key '_label')) 
        class="x"}}
{{else}}
    <label for="system.skills.{{key}}" title="{{lookup @root.desc.Skills key}}">
        {{key}}
        {{#if (includes attributes "inn√©e")}}*{{/if}}
    </label>
{{/if}}
</div>

{{#if (includes attributes "spe")}}

    <div class="grid-span-4 flex-group-left rollable" data-roll="s:{{key}}">
        (<i class="fas fa-dice-d20"></i>
        {{editOrView 
            (lookup @root.options "edition") 
            (concat "system.spe." key "_label_spe") 
            (lookup @root.system.spe (concat key '_label_spe')) 
            class="x"}})
    </div>
    
    {{editOrView 
        (lookup @root.options "edition") 
        (concat "system.skills." key) 
        (lookup @root.system.skills key) 
        class="grid-span-1"}} 

    <div class="grid-span-2 flex-group-left">
        ({{editOrView 
            (lookup @root.options "edition") 
            (concat "system.spe." key '_spe') 
            (lookup @root.system.spe (concat key '_spe')) 
            class="x"}})
    </div>

{{else}}
    {{#if (includes attributes "liste")}}
        {{editOrView 
            (lookup @root.options "edition") 
            (concat "system.skills." key) 
            (lookup @root.system.skills key) 
            class="grid-span-7"}}
    {{else}}
        <p class="grid-span-4"></p>
        {{editOrView 
            (lookup @root.options "edition") 
            (concat "system.skills." key) 
            (lookup @root.system.skills key) 
            class="grid-span-3"}}
    {{/if}}
{{/if}}

<div class="grid-span-1">
    {{#if (includes attributes "exotique")}}
        {{editOrView 
            (lookup @root.options "edition") 
            (concat "system.exotic." key "_carac") 
            (lookup @root.system.exotic (concat key '_carac')) 
            class="x"}}
    {{else}}
        <label for="system.skills.{{key}}">{{findPrefixedValue attributes "c"}}</label>
    {{/if}}
</div>