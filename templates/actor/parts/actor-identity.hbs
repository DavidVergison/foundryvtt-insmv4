        <div class="resource-content flexrow flex-center flex-between">
            <label for="system.boss" class="resource-label">{{localize (concat 'INS_MV.boss')}}</label>
            <input name="system.boss" type="text" value="{{system.boss}}" placeholder="Boss"/>
            <label for="system.rank" class="resource-label align-right">{{localize (concat 'INS_MV.rank')}}</label>
            <input name="system.rank" type="text" value="{{system.rank}}" placeholder="0" data-dtype="Number"/>
        </div>
    </div>
</section>